<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xl.system.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.xl.system.entity.Role">
        <id column="id" property="id" />
        <result column="role_name" property="roleName" />
        <result column="role_key" property="roleKey" />
        <result column="role_sort" property="roleSort" />
        <result column="status" property="status" />
        <result column="remark" property="remark" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="deleted" property="deleted" />
    </resultMap>

    <sql id="Base_Column_List">
        id, role_name, role_key, role_sort, status, remark, create_time, update_time, deleted
    </sql>

    <select id="selectRolesByUserId" parameterType="Long" resultMap="BaseResultMap">
        SELECT DISTINCT r.id, r.role_name, r.role_key, r.role_sort, r.status, 
               r.remark, r.create_time, r.update_time, r.deleted
        FROM sys_role r
        LEFT JOIN sys_user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
          AND r.deleted = 0
          AND r.status = 1
        ORDER BY r.role_sort
    </select>

</mapper>


